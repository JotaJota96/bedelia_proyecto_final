{
    "openapi": "3.0.0",
    "info": {
        "title": "API Bedelia UTEC",
        "contact": {
            "name": "Support Team",
            "email": "support@example.com"
        },
        "version": "1.0"
    },
    "paths": {
        "/usuarios/login": {
            "post": {
                "tags": [
                    "Usuarios"
                ],
                "operationId": "App\\Http\\Controllers\\UsuarioController::login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginDTO"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Devuelve datos del usuario logueado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponseDTO"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/usuarios/{ci}": {
            "get": {
                "tags": [
                    "Usuarios"
                ],
                "operationId": "App\\Http\\Controllers\\UsuarioController::obtenerUno",
                "parameters": [
                    {
                        "name": "ci",
                        "in": "path",
                        "description": "CI del usuario",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Devuelve datos del usuario",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UsuarioDTO"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "LoginDTO": {
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "contrasenia": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "LoginResponseDTO": {
                "properties": {
                    "cedula": {
                        "type": "string"
                    },
                    "correo": {
                        "type": "string"
                    },
                    "roles": {
                        "type": "string[]"
                    }
                },
                "type": "object"
            },
            "DireccionDTO": {
                "properties": {
                    "departamento": {
                        "type": "string"
                    },
                    "ciudad": {
                        "type": "string"
                    },
                    "calle": {
                        "type": "string"
                    },
                    "numero": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "PersonaDTO": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "cedula": {
                        "type": "string"
                    },
                    "nombre": {
                        "type": "string"
                    },
                    "apellido": {
                        "type": "string"
                    },
                    "correo": {
                        "type": "string"
                    },
                    "fecha_nac": {
                        "type": "string"
                    },
                    "sexo": {
                        "type": "string"
                    },
                    "direccion": {
                        "$ref": "#/components/schemas/DireccionDTO"
                    }
                },
                "type": "object"
            },
            "UsuarioDTO": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "contrasenia": {
                        "type": "string"
                    },
                    "persona": {
                        "$ref": "#/components/schemas/PersonaDTO"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "api_key": {
                "type": "apiKey",
                "description": "Token de autenticacion conformato como '<token>'",
                "name": "Authorization",
                "in": "header"
            }
        }
    }
}